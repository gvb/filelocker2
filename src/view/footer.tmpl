                <h4>Subject:</h4>
                <input type="text" maxlength="255" id="flMessageSubject" />
                <h4>Body:</h4>
                <textarea name="messageBody" id="flMessageBody" cols="40" rows="7" onKeyUp="javascript:Utility.limitCharacters('messages');"></textarea>
