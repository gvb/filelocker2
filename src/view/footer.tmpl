            </tr>
            </table>
        </div>
    </div>
</div>

<div id="bannerBox" class="hidden">
    <div class="popup_wrapper">
        <div class="popup_small">
            <div class="notes_box">$strip_tags($config['banner'])</div>
            <div class="clear"></div>
        </div>
    </div>
</div>

<div id="confirmBox" class="hidden">
</div>

