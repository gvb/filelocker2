    <div class="popup_wrapper">
        <div class="popup_large">
            <table id="help">
            <tr>
                <td>
                    <table class="file_table" style="width: 180px;">
                        <thead>
                            <tr>
                                <th class="spacerCol"></th>
                                <th class="helpTableOfContentsCol pseudoLink">Topic</th>
